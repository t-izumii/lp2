---
interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  id?: string;
  class?: string;
  fetchpriority?: 'high' | 'low' | 'auto';
}

const { src, alt, width, height, id, class: className, fetchpriority } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
const fullSrc = src.startsWith('http') ? src : `${baseUrl}${src}`;
---

<div class="c-picturePc" style={`--width: ${width}; --height: ${height};`}>
  <img
  src={fullSrc}
  alt={alt}
  width={width}
  height={height}
  id={id}
  class={className}
  fetchpriority={fetchpriority}
/>
</div>


<style is:global lang="scss">
@use '../styles/functions' as *;
@use '../styles/mixins' as *;

  .c-picturePc {
    display: inline-block;
    width: px(var(--width));
    max-width: 100%;
    aspect-ratio: var(--width) / var(--height);

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
</style>
