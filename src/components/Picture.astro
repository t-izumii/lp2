---
interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  widthSp?: number;
  heightSp?: number;
  id?: string;
  class?: string;
  fetchpriority?: 'high' | 'low' | 'auto';
}

const { src, alt, width, height, widthSp, heightSp, id, class: className, fetchpriority } = Astro.props;
const baseUrl = import.meta.env.BASE_URL === "/" ? "" : import.meta.env.BASE_URL;
const fullSrc = src.startsWith('http') ? src : `${baseUrl}${src}`;

// SP用のサイズが指定されていない場合はPC版を使用
const spWidth = widthSp || width;
const spHeight = heightSp || height;
---

<div
  class="c-picture"
  style={`--width: ${width}; --height: ${height}; --width-sp: ${spWidth}; --height-sp: ${spHeight};`}
>
  <img
    src={fullSrc}
    alt={alt}
    width={width}
    height={height}
    id={id}
    class={className}
    fetchpriority={fetchpriority}
  />
</div>

<style is:global lang="scss">
@use '../styles/functions' as *;
@use '../styles/mixins' as *;

  .c-picture {
    display: inline-block;
    width: px2(var(--width));
    max-width: 100%;
    aspect-ratio: var(--width) / var(--height);

    @include sp {
      width: px2(var(--width-sp));
      aspect-ratio: var(--width-sp) / var(--height-sp);
    }

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
</style>